{
  "name": "oma",
  "description": "Reference implementation.",
  "main": "index",
  "version": "1.4.1",
  "dependencies": {
    "datauri": "0.7.1",
    "ebnf-parser": "0.1.10",
    "event-stream": "^3.3.1",
    "fs-extra": "0.23.1",
    "image-size": "0.3.5",
    "jison": "0.4.15",
    "jshint": "^2.8.0",
    "lex-parser": "0.1.4",
    "oma-delta": "^1.4.0",
    "oma-runtime": "^1.4.0",
    "oma-terminal": "^1.4.0",
    "oma-ui": "^1.4.0",
    "semver": "^5.1.0",
    "uglify-js": "^2.4.24",
    "vinyl-fs": "^1.0.0",
    "yargs": "^3.18.0",
    "yauzl": "^2.3.1",
    "yazl": "^2.2.2"
  },
  "keywords": [
    "JavaScript",
    "executable prototype",
    "archive",
    "bundle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/open-mainframe-architecture/oma.git"
  },
  "author": "open.mainframe@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/open-mainframe-architecture/oma/issues"
  },
  "bin": {
    "oma": "bin/oma"
  },
  "oma": {
    "cli": {
      "archive": {
        "short": "Create archive with modules",
        "usage": "[options] directory ...",
        "long": "Scan directories for source assets of modules",
        "least": 1,
        "option": {
          "output": {
            "letter": "o",
            "describe": "Alternative output archive, otherwise stdout",
            "once": true
          },
          "silent": {
            "letter": "s",
            "arity": 0,
            "describe": "Do not verify JavaScript sources"
          }
        },
        "example": {
          "-o my-archive-1.3.7.zip ...": "",
          "src other/src ...": ""
        }
      },
      "bundle": {
        "short": "Create bundles from archive",
        "usage": "[options] archive",
        "long": "Search archive for new bundles to publish",
        "most": 1,
        "option": {
          "output": {
            "letter": "o",
            "demand": true,
            "describe": "Output directory for new bundles",
            "once": true
          }
        },
        "example": {
          "-o usr/pub ...": "",
          "my-archive-1.3.7.zip ...": ""
        }
      }
    },
    "archive": {
      "topConfig": "[A-Z]+([0-9A-Za-z])+(.[A-Z]+([0-9A-Za-z]))/config.js",
      "subConfig": "sub/[A-Z]+([0-9A-Za-z])/config.js",
      "bundleScripts": {
        "home": "publish",
        "base": "+([A-Za-z])+(-+([A-Za-z]))",
        "category": "script"
      },
      "launchScripts": {
        "home": "launch",
        "base": "+([A-Za-z])+(-+([A-Za-z]))",
        "category": "script"
      }
    },
    "bundle": {
      "loaderBase": "bundle"
    },
    "category": {
      "audio": "mp3",
      "class": "js,jison",
      "gfx": "png,jpg,gif",
      "script": "js"
    },
    "module": {
      "bootScript": "boot.js",
      "configScript": "config.js",
      "configScripts": {
        "home": "cfg",
        "category": "script"
      },
      "classScripts": {
        "home": "cls",
        "base": "**/[A-Z]+([0-9A-Za-z])",
        "category": "class"
      },
      "publicAssets": {
        "home": "pub",
        "base": "**/*",
        "category": "audio,gfx,script"
      }
    },
    "tool": {
      "datafy": {
        "category": "audio,gfx",
        "limit": 8192
      },
      "jshint": {
        "camelcase": true,
        "curly": true,
        "eqeqeq": true,
        "funcscope": false,
        "immed": true,
        "indent": 2,
        "latedef": "nofunc",
        "maxdepth": 4,
        "maxlen": 100,
        "noarg": true,
        "predef": {
          "ArrayBuffer": false,
          "DataView": false,
          "Float32Array": false,
          "Float64Array": false,
          "Int8Array": false,
          "Int16Array": false,
          "Int32Array": false,
          "Uint8Array": false,
          "Uint8ClampedArray": false,
          "Uint16Array": false,
          "Uint32Array": false,
          "clearTimeout": false,
          "setTimeout": false
        },
        "undef": true,
        "unused": "vars"
      },
      "parser": "Std.BaseObject+Std.Parsable"
    }
  }
}
